<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        style="@style/Card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/imageView9"
            style="@style/Image"
            android:layout_width="416dp"
            android:layout_height="81dp"
            app:srcCompat="@drawable/barack" />

        <TextView
            android:id="@+id/textView13"
            style="@style/TextJob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="President of the USA" />

        <TextView
            android:id="@+id/textView11"
            style="@style/TextDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Barack Hussein Obama II is an American politician who served as the 44th President of the United States from January 20, 2009, to January 20, 2017." />

        <TextView
            android:id="@+id/textView5"
            style="@style/TextName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Barack Obama" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView3"
        style="@style/Card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.42">

        <ImageView
            android:id="@+id/imageView8"
            style="@style/Image"
            android:layout_width="416dp"
            android:layout_height="81dp"
            app:srcCompat="@drawable/bruce" />

        <TextView
            android:id="@+id/textView9"
            style="@style/TextJob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Billionaire" />

        <TextView
            android:id="@+id/textView10"
            style="@style/TextDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bruce Wayne, billionaire industrialist and notorious playboy. Although he has no superhuman powers, he is one of the world's smartest men and greatest fighters" />

        <TextView
            android:id="@+id/textView4"
            style="@style/TextName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bruce Wayne" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        style="@style/Card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/imageView7"
            style="@style/Image"
            android:layout_width="416dp"
            android:layout_height="81dp"
            app:srcCompat="@drawable/clark" />

        <TextView
            android:id="@+id/textView3"
            style="@style/TextName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clark Kent" />

        <TextView
            android:id="@+id/textView14"
            style="@style/TextDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clark Joseph Kent is a fictional character appearing in American comic books published by DC Comics. he debuted in Action Comics #1 and serves as the civilian and secret identity of the superhero Superman." />

        <TextView
            android:id="@+id/textView7"
            style="@style/TextJob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reporter" />

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btnnext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
        android:onClick="process"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2"
        app:layout_constraintVertical_bias="0.454" />

    <Button
        android:id="@+id/btnmap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="60dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="process"
        android:text="Map"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.988"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2"
        app:layout_constraintVertical_bias="0.454" />
</android.support.constraint.ConstraintLayout>
