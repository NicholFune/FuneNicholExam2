<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Image">
        <item name="android:paddingLeft">240dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="TextName">
        <item name="android:textSize">24dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="TextJob">
        <item name="android:textSize">18dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingTop">45dp</item>
    </style>

    <style name="TextDesc">
        <item name="android:textSize">14dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingTop">80dp</item>
    </style>

    <style name="Card">
        <item name="android:background">@color/cardviewbg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">180dp</item>
    </style>

</resources>
